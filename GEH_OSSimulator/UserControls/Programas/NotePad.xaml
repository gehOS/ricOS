<UserControl x:Class="GEH_OSSimulator.UserControls.Programas.NotePad"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GEH_OSSimulator.UserControls.Programas"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="GridNotepad" Background="White">
        <TextBox x:Name="textBoxNotepad" HorizontalAlignment="Left" Margin="0,27,0,0" TextWrapping="Wrap" Text="Hola :)" VerticalAlignment="Top" Height="{Binding ElementName=GridNotepad,Path=ActualHeight}" Width="{Binding ElementName=GridNotepad,Path=ActualWidth}" Padding="10"/>
        <Label x:Name="labelTitle" Content="Notepad" HorizontalAlignment="Left" Margin="9,1,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnClose" Content="X" HorizontalAlignment="Right" Margin="261,4,0,0" VerticalAlignment="Top" Width="29"/>

    </Grid>
</UserControl>
