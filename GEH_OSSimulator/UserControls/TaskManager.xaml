<UserControl x:Class="GEH_OSSimulator.UserControls.TaskManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GEH_OSSimulator"
             mc:Ignorable="d" 
             d:DesignHeight="300" Width="598.872">
    <Grid>
        <ListBox x:Name="lbProcesses" HorizontalAlignment="Left" Height="280" Margin="10,10,0,0" VerticalAlignment="Top" Width="253"/>
        <Button x:Name="btnRun" Content="Run" HorizontalAlignment="Left" Margin="281,94,0,0" VerticalAlignment="Top" Width="110" Height="50" Click="btnRun_Click"/>
        <TextBox x:Name="tbProcess" HorizontalAlignment="Left" Height="32" Margin="281,41,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="192"/>
        <Label x:Name="lblProcessName" Content="Process name" HorizontalAlignment="Left" Margin="281,10,0,0" VerticalAlignment="Top" Width="91"/>
        <Label x:Name="lblClock" Content="00:00:00" HorizontalAlignment="Left" Margin="352,236,0,0" VerticalAlignment="Top" Width="67" FontSize="14.667"/>
    </Grid>
</UserControl>
