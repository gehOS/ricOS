<UserControl x:Class="GEH_OSSimulator.UserControls.Programas.NotePad"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:GEH_OSSimulator.UserControls.Programas"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Width="300"
             Height="300"
             mc:Ignorable="d">
    <Grid x:Name="GridNotepad" Background="White">
        <TextBox x:Name="textBoxNotepad"
                 Width="{Binding ElementName=GridNotepad,
                                 Path=ActualWidth}"
                 Height="{Binding ElementName=GridNotepad,
                                  Path=ActualHeight}"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Padding="10"
                 Text="Hola :)"
                 TextWrapping="Wrap" />

    </Grid>
</UserControl>
